theme = tokyonight

font-size = 14
macos-titlebar-style = tabs
window-save-state = always
confirm-close-surface = false

# keybinds
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right

keybind = cmd+h=previous_tab
keybind = cmd+l=next_tab

keybind = super+ctrl+h=resize_split:left,20
keybind = super+ctrl+j=resize_split:down,20
keybind = super+ctrl+k=resize_split:up,20
keybind = super+ctrl+l=resize_split:right,20
